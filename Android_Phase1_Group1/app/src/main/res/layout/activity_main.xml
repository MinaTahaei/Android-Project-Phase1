<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:ignore="ExtraText"><![CDATA[/]]><![CDATA[/>]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            android:contentDescription="@string/TopPic"
            android:src="@drawable/group_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/colorfulText"
                android:layout_width="271dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/colorfulText"
                android:src="@drawable/component_1__1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:contentDescription="@string/cardRectangle"
                android:src="@drawable/rectangle_6" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_weight="0.3"
            android:contentDescription="@string/BigText"
            android:text="@string/make_paying_easier_with_wallet"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="start|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/colorfulCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/ColorfulcCircle"
                android:src="@drawable/exclusion_1" />

            <View
                android:id="@+id/whiteCircle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="220dp"
                android:background="@drawable/circle" />

            <View
                android:id="@+id/whiteCircle2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="220dp"
                android:background="@drawable/circle" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:text="@string/get_started"
            android:textAllCaps="false"
            android:textSize="22sp"
            app:backgroundTint="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>